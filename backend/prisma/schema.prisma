datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model BPReading {
  id        Int      @id @default(autoincrement())
  systolic  Int
  diastolic Int
  pulse     Int?
  takenAt   DateTime
  notes     String?
  source    String   @default("manual")

  @@index([takenAt(sort: Desc)])
}
