# Dockerfile.dev
FROM node:22-alpine

WORKDIR /app

# Install dependencies first for better layer caching
COPY package*.json ./
RUN npm ci || npm install

# Copy source code
COPY . .

# Vite default dev port
EXPOSE 5173

# Ensure file watching works well across Docker on macOS/Windows/WSL/Linux
ENV CHOKIDAR_USEPOLLING=true \
    WATCHPACK_POLLING=true \
    HOST=0.0.0.0

# Run Vite dev server; --host makes it accessible outside container
CMD ["npm", "run", "dev"]
